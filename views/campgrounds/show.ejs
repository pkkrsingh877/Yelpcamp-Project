<%- include('../partials/top')  %>
    <section class="row">
        <div class="col-6 offset-3">
            <h1><%= campground.title %></h1>
            <article class="card">
                <figure>
                    <img src="<%= campground.image %>" alt="" class="card-img-top">
                    <!-- <figcaption></figcaption> -->
                </figure>
                <div class="card-body">
                    <p class="card-text"><%= campground.title %></p>
                    <p class="card-text"><small class="text-muted"><%= campground.location %> </small></p>
                </div>
                <ul class="list-group list-group-flush">
                <li class="list-group-item">$<%= campground.price %></li>
                <li class="list-group-item"><%= campground.description %></li>
                </ul>  
                <div class="card-body">
                    <a href="/campgrounds/edit/<%= campground._id %>" class="btn btn-primary">Edit</a>
                    <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST" class="d-inline">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
                <div class="card-footer">
                    <a href="/campgrounds" class="btn btn-primary">Back</a>
                </div>
            </article>
        </div>
    </section>
<%- include('../partials/bottom')  %>