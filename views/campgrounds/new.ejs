<%- include('../partials/top')  %>
    <h1>Add new Campground</h1>
    <a href="/campgrounds">Return to campgrounds</a>
    <form action="/campgrounds" method="POST">
        <div>
            <label for="title">Title: </label>
            <input type="text" name="title" id="title" placeholder="Enter the title...">
        </div>
        <div>
            <label for="description">Description: </label>
            <input type="text" name="description" id="description" placeholder="Enter about campground...">
        </div>
        <div>
            <label for="location">Location: </label>
            <input type="text" name="location" id="location" placeholder="Enter location of Campground...">
        </div>
        <div>
            <label for="price">Price: </label>
            <input type="text" name="price" id="price" placeholder="How much does the campground cost ?">
        </div>
        <button class="btn">Add Campground</button>
    </form>
<%- include('../partials/bottom')  %>