<%- include('../partials/top')  %>
    <h1>Edit Campground</h1>
    <a href="/campgrounds">Return to campgrounds</a>
    <form action="/campgrounds/<%= campground._id %>?_method=PATCH" method="POST">
        <div>
            <label for="title">Title: </label>
            <input type="text" name="title" id="title" placeholder="Enter the title..." value="<%= campground.title %>">
        </div>
        <div>
            <label for="description">Description: </label>
            <input type="text" name="description" id="description" placeholder="Enter about campground..."  value="<%= campground.description %>">
        </div>
        <div>
            <label for="location">Location: </label>
            <input type="text" name="location" id="location" placeholder="Enter location of Campground..."  value="<%= campground.location %>">
        </div>
        <div>
            <label for="price">Price: </label>
            <input type="text" name="price" id="price" placeholder="How much does the campground cost ?"  value="<%= campground.price %>">
        </div>
        <button class="btn">Update</button>
    </form>
<%- include('../partials/bottom')  %>